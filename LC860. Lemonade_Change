# LC860 Lemonade Change

# Sol Greedy
class Solution:
    def lemonadeChange(self, bills: List[int]) -> bool:
        money = {5:0,10:0,20:0}

        for bill in bills:
            money[bill] += 1
            if bill == 5:
                continue
            if bill == 10:
                if money[5] > 0:
                    money[5] -= 1
                else:
                    return False
            if bill == 20:
                if money[5] > 0 and money[10] > 0:
                    money[5] -= 1
                    money[10] -= 1
                elif money[5] >= 3:
                    money[5] -= 3
                else:
                    return False
        return True
            

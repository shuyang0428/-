# LC455 Assign Cookies

# Sol 1 Greedy Iteration on the kid and big cookie first
class Solution:
    def findContentChildren(self, g: List[int], s: List[int]) -> int:
        g.sort()
        s.sort()
        idx = len(s) - 1
        res = 0
        for i in range(len(g)-1,-1,-1):
            if idx >= 0 and s[idx] >= g[i]:
                res += 1
                idx -= 1

        return res

# Sol 2 Greedy iteration on the cookie and small cookie first
class Solution:
    def findContentChildren(self, g: List[int], s: List[int]) -> int:
        g.sort()
        s.sort()

        index = 0
        for i in range(len(s)):
            if index<len(g) and g[index] <= s[i]:
                index += 1
        return index

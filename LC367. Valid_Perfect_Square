# LC367 Valid Perfect Square
class Solution:
    def isPerfectSquare(self, num: int) -> bool:
        if num < 2:
            return True
        left,right = 0,num // 2
        while left <= right:
            mid = left + (right - left) // 2
            if mid ** 2 > num:
                right = mid - 1
            elif mid ** 2 < num:
                left = mid + 1
            else:
                return True
        return False

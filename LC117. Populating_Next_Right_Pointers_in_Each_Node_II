# LC117 Populating Next Right Pointers in Each Node II

class Solution:
    def connect(self, root: 'Node') -> 'Node':
        if not root:
            return root
        que = collections.deque([root])
        while que:
            n = len(que)
            for i in range(n):
                if i == 0:
                    pre = que.popleft()
                    node = pre
                else:
                    node = que.popleft()
                    pre.next = node
                    pre = pre.next
                if node.left:
                    que.append(node.left)
                if node.right:
                    que.append(node.right)
            pre.next = None
        return root
        

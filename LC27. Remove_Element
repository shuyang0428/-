# LC27 Remove Element

# Brute Force
class Solution:
    def removeElement(self, nums: List[int], val: int) -> int:
        i,l = 0,len(nums)
        while i < l:
            if nums[i] == val:
                for j in range(i + 1,l):
                    nums[j - 1] = nums[j]
                l -= 1
                i -= 1
            i += 1
        return l

# Fast and slow pointers 
class Solution:
    def removeElement(self, nums: List[int], val: int) -> int:
        slow,fast = 0,0
        while fast < len(nums):
            if nums[fast] != val:
                nums[slow] = nums[fast]
                slow += 1
            fast += 1

        return slow


# Index pointers
class Solution:
    def removeElement(self, nums: List[int], val: int) -> int:
        idx = 0
        for i in range(len(nums)):
            if nums[i] != val:
                nums[idx] = nums[i]
                idx += 1
        return idx

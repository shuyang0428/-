# LC453 Non-overlapping Intervals

# Sol 1 Greedy
class Solution:
    def eraseOverlapIntervals(self, intervals: List[List[int]]) -> int:
        intervals.sort(key = lambda x: x[1])
        n = len(intervals)

        prev = 0
        count = 1

        for i in range(1,n):
            if intervals[i][0] >= intervals[prev][1]:
                count += 1
                prev = i
            else:
                continue
        return n - count

# Sol 2 Greedy
class Solution:
